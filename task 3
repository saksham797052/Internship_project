import re

def check_password_strength(password):
    """
    Analyzes the strength of a password based on several criteria.
    Returns a score and a list of feedback messages.
    """
    score = 0
    feedback = []

    # --- Criteria Checks ---

    # 1. Length Check (minimum 12 characters recommended)
    if len(password) >= 12:
        score += 1
    else:
        feedback.append("âŒ Password should be at least 12 characters long.")

    # 2. Uppercase Letter Check
    if re.search(r'[A-Z]', password):
        score += 1
    else:
        feedback.append("âŒ Add at least one uppercase letter (A-Z).")

    # 3. Lowercase Letter Check
    if re.search(r'[a-z]', password):
        score += 1
    else:
        feedback.append("âŒ Add at least one lowercase letter (a-z).")

    # 4. Number Check
    if re.search(r'[0-9]', password):
        score += 1
    else:
        feedback.append("âŒ Add at least one number (0-9).")

    # 5. Special Character Check
    if re.search(r'[!@#$%^&*(),.?":{}|<>]', password):
        score += 1
    else:
        feedback.append("âŒ Add at least one special character (e.g., !@#$%).")

    # --- Determine Strength Level ---
    
    strength = ""
    if score <= 2:
        strength = "Weak ğŸ˜Ÿ"
    elif score <= 4:
        strength = "Medium ğŸ¤”"
    else: # score == 5
        strength = "Strong ğŸ’ª"

    return strength, feedback

# --- Main part of the script ---
if __name__ == "__main__":
    print("--- Password Strength Assessment Tool ---")
    user_password = input("Please enter a password to assess: ")

    strength_level, feedback_list = check_password_strength(user_password)

    print("\n--- Assessment Results ---")
    print(f"Password Strength: {strength_level}")
    
    if feedback_list:
        print("\nSuggestions for improvement:")
        for suggestion in feedback_list:
            print(suggestion)
    else:
        print("âœ… Excellent! Your password meets all the criteria for a strong password.")
    print("--------------------------")
